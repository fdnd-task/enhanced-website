<%- include('./partials/head') %>

<!-- De opmaak van de header  -->
<%- include('./partials/header') %>

<main>
    <section>
		<article>
			<img src="<%= results[0].coverimages[1] %>" alt="" />
		</article>
		<article>
			<h1><%= results[0].titles[0] %></h1>
			<h2>Over het boek</h2>
			<ul>
				<li>Schrijver: <%= results[0].authors[0] %></li>
				<li>Uitgever: <%= results[0].publisher %></li>
				<li>
					Genre: <%= results['subject-topical'] || '' %>
				</li>
				<li>Taal: <%= results[0].languages %></li>
			</ul>
			<ul>
				<li>ID: <%= results[0].id %></li>
				<li>ISBN: <%= results[0].isbn || '' %></li>
			</ul>
			<h2>Samenvatting</h2>
			<p><%= results[0].summaries %></p>
			<a href="/reserveren?<%= results[0].id %>" class="cta">Reserveer boek</a>
		</article>
	</section>
</main>

<!-- De opmaak van de footer  -->
<%- include('./partials/foot') %>