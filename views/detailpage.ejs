<div class="main-detailpage">
    <h1><%- method.title %></h1>
    <section class="beschrijving" id="beschrijving">
        <%- method.description.html %>  
        <img src="<%- method.template.url %>" alt="Method Template">  
    </section>
    <div class="buttondeel">
     <button id="stappenplanbutton">
        <h2>Stappenplan</h2>
        <img src="/pijl-hexagon-naar-beneden.svg" alt="Pijl naar beneden">
     </button>
    </div>
    <div id="stappen" class="stappen">
        <ol>
            <% method.steps.forEach(step => { %>
                <li>
                    <h4><%- step.title %></h4>
                    <div>
                        <%- step.description.html %>
                    </div>
                </li>
            <% }) %>
        </ol>
            
    </div>
    <section id="categorieen">
        <% method.categories.forEach(category => { %>
            <ul>
                <%- category.title %>
        </ul>
            <% }) %>
    </section>
    <section id="voorbeelden">
    
    </section>
</div>
